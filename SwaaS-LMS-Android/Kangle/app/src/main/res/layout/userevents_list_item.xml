<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/event_listItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp">


            <ImageView
                android:id="@+id/bullet"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/ic_date_range_black_36dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="12dp"
                android:orientation="vertical"
                android:layout_toLeftOf="@+id/edit_events_details"
                android:layout_marginBottom="10dp">

                <TextView
                    android:id="@+id/event_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="BE"
                    android:textSize="@dimen/padding_twenty"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/daterange_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Anna University"
                    android:textSize="@dimen/activity_vertical_margin"
                    android:textColor="@color/black"/>

            </LinearLayout>

            <ImageView
                android:id="@+id/edit_events_details"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginTop="12dp"
                android:layout_toLeftOf="@+id/delete_events_details"
                android:padding="4dp"
                android:src="@drawable/ic_edit_white_36dp"
                android:tint="@color/tacobellbackground"
                android:layout_marginRight="5dp"/>

            <ImageView
                android:id="@+id/delete_events_details"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginTop="12dp"
                android:layout_alignParentRight="true"
                android:padding="4dp"
                android:src="@drawable/ic_delete_black_36dp"
                android:tint="@color/tacobellbackground"
                android:layout_marginRight="10dp"/>

        </RelativeLayout>



    </LinearLayout>

</RelativeLayout>