<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="105dp"
        android:layout_margin="5dp"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cardviewLayout">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/innerlinear1"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <!--<com.makeramen.roundedimageview.RoundedImageView
                        android:id="@+id/thumbnail"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/icon_jpeg"
                        android:fitsSystemWindows="true"
                        android:layout_gravity="center_vertical"
                        app:riv_oval="true"/>-->

                    <ImageView
                        android:id="@+id/thumbnail"
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/icon_jpeg"
                        android:fitsSystemWindows="true"
                        android:background="@color/topbar"
                        android:layout_gravity="center_vertical"/>

                    <RelativeLayout
                        android:id="@+id/defaultthumbnailview"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:gravity="center"
                        android:visibility="gone">

                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:padding="@dimen/padding_eight"
                            android:src="@drawable/circular_grey_background"/>

                        <TextView
                            android:id="@+id/firstText"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:text="DA"
                            android:textSize="16dp"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:textAllCaps="true"
                            android:textColor="@color/white"/>

                    </RelativeLayout>

                    <TextView
                        android:id="@+id/type_of_chklist_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="D"
                        android:paddingLeft="3dp"
                        android:textStyle="bold"
                        android:textSize="12dp"
                        android:textColor="@color/black"
                        android:visibility="gone"
                        android:background="@drawable/ic_checklist_tag"/>

                </RelativeLayout>


                <LinearLayout
                    android:id="@+id/innerlinear2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="0dp"
                    android:layout_marginLeft="5dp"
                    android:paddingTop="4dp">

                    <com.swaas.kangle.utils.CustomFontTextView
                        android:id="@+id/texttitle"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:maxLines="3"
                        android:paddingBottom="3dp"
                        android:paddingStart="4dp"
                        android:text="Name of Course"
                        android:textStyle="bold"
                        android:layout_marginTop="2dp"
                        android:textColor="@color/black"
                        android:textSize="12sp" />

                    <RelativeLayout
                        android:id="@+id/times"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingTop="2dp">

                        <TextView
                            android:id="@+id/categoreyname"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toLeftOf="@+id/expirydate"
                            android:layout_marginRight="10dp"
                            android:text="@string/category"
                            android:paddingStart="5dp"
                            android:textColor="@color/black"
                            android:textSize="9sp" />


                        <LinearLayout
                            android:id="@+id/expirydate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="10dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/timedurationicon"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_question_timer"
                                android:tint="@color/black"
                                android:visibility="gone"/>

                            <TextView
                                android:id="@+id/end_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="end"
                                android:text="hello"
                                android:textColor="@color/black"
                                android:textSize="9sp" />

                        </LinearLayout>

                    </RelativeLayout>


                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/black"
            android:layout_marginTop="2dp"/>

    </RelativeLayout>

</RelativeLayout>