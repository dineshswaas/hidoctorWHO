<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"
        android:id="@+id/cardviewLayout"
        app:cardElevation="5dp"
        app:cardMaxElevation="5dp"
        app:cardCornerRadius="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:id="@+id/innerlinear1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/thumbnail"
                        android:layout_width="match_parent"
                        android:layout_height="140dp"
                        android:src="@drawable/icon_jpeg"
                        android:fitsSystemWindows="true"
                        android:layout_gravity="center_vertical"
                        android:background="@color/topbar"/>

                <RelativeLayout
                    android:id="@+id/new_tag"
                    android:layout_width="41dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_new_tag"
                        android:fitsSystemWindows="true"/>

                    <TextView
                        android:id="@+id/new_tag_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/new_tag_text"
                        android:textColor="@color/black"
                        android:textSize="9dp"
                        android:layout_centerInParent="true"/>

                </RelativeLayout>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/innerlinear2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="0dp"
                    android:paddingTop="1dp">

                    <LinearLayout
                        android:id="@+id/segmentprogresslayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_below="@+id/thumbnail_layout">


                    </LinearLayout>

                    <ProgressBar
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                        android:layout_width="match_parent"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginRight="25dp"
                        android:layout_height="10dp"
                        android:progress="80"
                        android:visibility="gone" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingStart="4dp"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/baseline_list_white"/>

                            <com.swaas.kangle.utils.CustomFontTextView
                                android:id="@+id/textSubtitle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:maxLines="1"
                                android:text=" - "
                                android:layout_marginLeft="5dp"
                                android:textColor="@color/black"
                                android:textSize="14sp"/>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingStart="4dp"
                            android:gravity="center"
                            android:visibility="gone">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_play_circle_outline_black_36dp"
                                android:tint="@color/white"/>

                            <com.swaas.kangle.utils.CustomFontTextView
                                android:id="@+id/textSubtitle1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:maxLines="1"
                                android:text=" 3 "
                                android:layout_marginLeft="5dp"
                                android:textColor="@color/black"
                                android:textSize="14sp"/>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingStart="4dp"
                            android:gravity="center"
                            android:visibility="gone">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_help_outline_white_24dp" />

                            <com.swaas.kangle.utils.CustomFontTextView
                                android:id="@+id/textSubtitle2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:maxLines="1"
                                android:text=" 3 "
                                android:layout_marginLeft="5dp"
                                android:textColor="@color/black"
                                android:textSize="14sp"/>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingStart="4dp"
                            android:gravity="center"
                            android:visibility="gone">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_help_outline_white_24dp" />

                            <com.swaas.kangle.utils.CustomFontTextView
                                android:id="@+id/textSubtitle3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:maxLines="1"
                                android:text=" 3 "
                                android:layout_marginLeft="5dp"
                                android:textColor="@color/black"
                                android:textSize="14sp"/>


                        </LinearLayout>

                    </LinearLayout>

                    <com.swaas.kangle.utils.CustomFontTextView
                        android:id="@+id/texttitle"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:maxLines="3"
                        android:paddingBottom="3dp"
                        android:paddingStart="4dp"
                        android:text=" - "
                        android:layout_marginTop="2dp"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/coursedirect"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:visibility="gone"
                        android:text="@string/expired_shortened"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="0dp"
                    android:background="#DEDEDE">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_weight="0.65"
                        android:layout_height="match_parent"
                        android:layout_marginTop="0dp"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/start_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:visibility="gone"
                            android:text="@string/expired_shortened"/>

                        <TextView
                            android:id="@+id/end_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textSize="12dp"
                            android:padding="5dp"
                            android:text=" - "/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.30"
                        android:gravity="center"
                        android:layout_marginRight="5dp"
                        android:visibility="gone">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center">

                            <!--<ProgressBar
                                android:id="@+id/progress_status"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_alignParentBottom="true"
                                android:layout_centerHorizontal="true"
                                android:max="500"
                                android:progress="0"
                                android:progressDrawable="@drawable/circular" />-->

                            <com.jackandphantom.circularprogressbar.CircleProgressbar
                                android:id="@+id/progress_status"
                                android:layout_width="40dp"
                                android:layout_height="match_parent"
                                android:layout_alignParentRight="true"
                                app:cpb_progress="50"/>

                        </LinearLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/completion_string"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="25"
                                android:layout_centerInParent="true"
                                android:textSize="9dp"
                                android:textColor="@color/black"/>

                        </RelativeLayout>

                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

            <View
                android:id="@+id/blockcourse"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/black"
                android:visibility="gone"
                android:alpha="0.5"/>

    </android.support.v7.widget.CardView>

    </RelativeLayout>
