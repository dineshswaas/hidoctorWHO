<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/sub_user_profileimage"
            android:layout_width="0dp"
            android:layout_weight="0.20"
            android:layout_gravity="top"
            android:layout_height="match_parent"/>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="0.80"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/sub_posted_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="user Name"
                android:layout_margin="5dp"
                android:maxLines="1"
                android:textStyle="normal"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/sub_commentText"
                android:layout_width="match_parent"
                android:layout_margin="5dp"
                android:maxLines="2"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/sub_posted_user_name"/>

            <TextView
                android:id="@+id/sub_comment_duration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/sub_posted_user_name"
                android:paddingBottom="5dp"
                android:visibility="gone"
                android:text="commented 3 hrs ago"/>
        </RelativeLayout>


    </LinearLayout>

</LinearLayout>