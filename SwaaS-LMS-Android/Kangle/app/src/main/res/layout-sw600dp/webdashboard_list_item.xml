<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true"
    android:id="@+id/cardviewLayout"
    android:background="@color/black"
    app:cardElevation="3dp"
    app:cardMaxElevation="4dp"
    app:cardCornerRadius="1dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/innerlinear1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@color/black">

            <ImageView
                android:id="@+id/coursethumbnail"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:src="@drawable/icon_jpeg"
                android:fitsSystemWindows="true"
                android:layout_gravity="center_vertical"/>

            <LinearLayout
                android:id="@+id/innerlinear2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="0dp"
                android:paddingTop="4dp">

                <com.swaas.kangle.utils.CustomFontTextView
                    android:id="@+id/course_name"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:fontFamily=""
                    android:paddingBottom="3dp"
                    android:paddingStart="5dp"
                    android:text="Name of Course"
                    android:textStyle="bold"
                    android:layout_marginTop="2dp"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

                <com.swaas.kangle.utils.CustomFontTextView
                    android:id="@+id/description_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="3dp"
                    android:paddingLeft="4dp"
                    android:text=""
                    android:visibility="gone"
                    android:maxLines="2"
                    android:textSize="13sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center|bottom">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="0.6"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/starttext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left|center"
                        android:text="@string/start"
                        android:paddingStart="5dp"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:textSize="9sp" />

                    <TextView
                        android:id="@+id/start_date"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="left|center"
                        android:text="test"
                        android:paddingStart="3dp"
                        android:textColor="@color/white"
                        android:textSize="9sp" />

                </LinearLayout>

                        <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/endtext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left|center"
                        android:text="@string/finish"
                        android:paddingStart="5dp"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:textSize="9sp" />

                    <TextView
                        android:id="@+id/end_date"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="left|center"
                        android:text="test"
                        android:paddingStart="3dp"
                        android:textColor="@color/white"
                        android:textSize="9sp" />

                </LinearLayout>

                        <TextView
                        android:id="@+id/progresstext"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="left|center"
                        android:text="@string/progress"
                        android:paddingStart="5dp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        android:layout_marginTop="12dp"/>

                        <RelativeLayout
                            android:id="@+id/progress_status_holder"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingStart="1dp"
                            android:paddingEnd="1dp"
                            android:paddingTop="1dp"
                            android:paddingLeft="1dp"
                            android:paddingBottom="1dp"
                            android:paddingRight="1dp"
                            android:layout_marginLeft="5dp"
                            android:background="@color/white"
                            android:orientation="horizontal">

                            <ProgressBar
                                android:id="@+id/progress_status"
                                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="20dp"
                                android:background="@color/black"
                                android:visibility="visible" />


                        </RelativeLayout>

                    </LinearLayout>

                    <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="0.40"
                            android:layout_height="wrap_content"
                            android:gravity="right">

                            <TextView
                                android:id="@+id/coursedirect"
                                android:layout_width="120dp"
                                android:layout_height="wrap_content"
                                android:text="@string/resume_course"
                                android:textColor="@color/white"
                                android:layout_marginRight="10dp"
                                android:paddingTop="5dp"
                                android:gravity="center"
                                android:paddingBottom="5dp"
                                android:paddingRight="10dp"
                                android:paddingLeft="10dp"
                                android:background="@drawable/rounded_taco_button"
                                />

                        </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


    </RelativeLayout>

</android.support.v7.widget.CardView>

</RelativeLayout>
